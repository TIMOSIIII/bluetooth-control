// RTC 코딩 slave - 2 

#include <Wire.h>
#include <NewPing.h>
#include <LiquidCrystal_I2C.h>
#include <SoftwareSerial.h>
#include "RTClib.h"
String text = "connect_monitor";
String text2 ="i'll take a picture"; 
RTC_DS1307 RTC;//이건 RTC기기에 따라 또 다르겠지??
SoftwareSerial bluetooth(3,4);
LiquidCrystal_I2C lcd(0x3F,16,2);
#define interruptPin 2
int textLen = text.length();
int index = 0;

// 평소에는 시간을 업로딩 하다가 
void setup()
{
  Wire.begin();
  RTC.begin();
  RTC.adjust(DateTime(__DATE__ , __TIME__));
  Serial.begin(9600); 
  bluetooth.begin(9600);
  Serial.println("Enter AT Commands: ");  
  lcd.init();  // LCD초기 설정             
  lcd.backlight(); // LCD초기 설정  
  lcd.setCursor(0,0); //텍스트가 LCD에 나타날 위치
  lcd.print("Hellow, world!"); 
  lcd.setCursor(3,1);
  lcd.print("How are you?"); 
  pinMode(interruptPin,OUTPUT);  //자동으로 pinmode 설정을 처리 
  lcd.begin(16, 2);   
}

void interrupt_handler() {
//LCD 띄우기 
lcd.setCursor(4,0);
lcd.print(text.substring(index, index + 16));//shift하려고 하는것
lcd.setCursor(5,1);
lcd.print(text2.substring(index, index + 16));//shift하려고 하는것
  // update the index for the next iteration
index++;
if (index + 16 > textLen) {
  index = 0;
}
}
void timer (void)
{



}

void loop()  {
  char c;
  //timer();
  DateTime now = RTC.now();                       // 시간을 읽어옴
  lcd.setCursor(1,0);
  lcd.print(now.year(), DEC);                  // 시리얼모니터에 출력
  lcd.print('/');
  lcd.print(now.month(), DEC);
  lcd.print('/');
  lcd.print(now.day(), DEC);
  lcd.print(' ');
  lcd.setCursor(1,1);
  lcd.print(now.hour(), DEC);
  lcd.print(':');
  lcd.print(now.minute(), DEC);
  lcd.print(':');
  lcd.print(now.second(), DEC);
  lcd.println();
  delay(1000);
  switch (now.dayOfTheWeek()) {
    case 0:
      lcd.print("Sun");
      break;
    case 1:
      lcd.print("Mon");
      break;
    case 2:
      lcd.print("Tue");
      break;
    case 3:
      lcd.print("Wed");
      break;
    case 4:
      lcd.print("Thu");
      break;
    case 5:
      lcd.print("Fri");
      break;
    case 6:
      lcd.print("Sat");
      break;
  }
  if (bluetooth.available()) 
  {  // 여기서 안들어가면 그럴 수도 있음
  c = (char)bluetooth.read();
  Serial.write(c);
  attachInterrupt(digitalPinToInterrupt(interruptPin), interrupt_handler, FALLING);    
  } // 이제 고민해야 할 것은 , 초단위 혹은 얼마나 머무는가?
  else if( c=='b')
  {
  lcd.clear();  
  lcd.setCursor(1,0);
  lcd.print("water the plants day is");
  lcd.setCursor(1,1);
  lcd.print("Sunday , and Wedensday");  
  }
  if (Serial.available()) {
    bluetooth.write(Serial.read());
  }
}
